%# Request Tracker (RT) is Copyright Best Practical Solutions, LLC.

<%INIT>
my $ARGSRef = $ARGS{'ARGSRef'};

if ((!exists $$ARGSRef{'AddMoreAttach'}) &&
    (defined($$ARGSRef{'id'}) && $$ARGSRef{'id'} eq 'new')) {
    my %mandatoryFields = RT->Config->Get('MandatoryFields');

    my @supportedFields = (
        ## Message details
        'Requestors',
        'Cc',
        'AdminCc',
        'Subject',
        'Content',
        'Attach',
        ## Meta data
        'Status',
        'Owner',
        ## Basics
        'Priority',
        'InitialPriority',
        'FinalPriority',
        'TimeEstimated',
        'TimeWorked',
        'TimeLeft',
        ## Dates
        'Starts',
        'Due',
        ## Links
        'new-DependsOn',
        'DependsOn-new',
        'new-MemberOf',
        'MemberOf-new',
        'new-RefersTo',
        'RefersTo-new'
    );

    for my $field (@supportedFields) {
        if ((exists $mandatoryFields{$field}) &&
            ($mandatoryFields{$field} eq 'true') &&
            ((!$$ARGSRef{$field}) || ($$ARGSRef{$field} =~ /^[ \t]*$/))) {
            $$skip_create = 1;
            push @{$results}, loc('[_1]: mandatory field', $field);
        }
    }
}
</%INIT>

<%ARGS>
$skip_create => undef
$results => undef
</%ARGS>
